<!--form for new stand-->
<%= simple_form_for [:admin, @stand], :html => { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' }, label_html: { class: 'control-label '} } do |f| %>
<div class="block full">
	<div class="block-title">
		<h2>Simple</h2>
	</div>
	
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :frontage %>
		</div>
		<div class="col-md-6">
			<%= f.input :depth %>
		</div>
	</div>
</div>

<div class="block full">
	<div class="block-title">
		<h2>Advanced</h2>
	</div>
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :taken, :as => :boolean, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %>
		</div>
		<div class="col-md-6">
			<%= f.input :booking_id %>
		</div>
		
		
	</div>

	

	
</div>
<div class="block full">
	<%= f.button :submit %>
	<% end %>
</div>

<!--END form for new stand-->