<!--BEGIN datatable-->
<div class="table-responsive">
    <table id="example-datatable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th>User</th>
                <th>Contact e-mail</th>
                <th>Date</th>
                <th>Deposit?</th>
                <th class="text-center">Processing</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% model.each do |item| %>
            <tr>
                <td class="text-center"><%= item.id %></td>
                <td><a href="javascript:void(0)"><%= item.user.nil? ? 'No User' : item.user.name %></a></td>
                <td><%= item.email %></td>
                <td><%= item.created_at %></td>
                <td class="text-center">
                <% if item.deposit_paid %>
                <a href="javascript:void(0)" data-toggle="tooltip" title="Paid" class="tick"><i class="fa fa-check"></i></a>
                <% else %>
                <a href="javascript:void(0)" data-toggle="tooltip" title="Unpaid" class="cross"><i class="fa fa-times"></i></a>
                <% end %>
                </td>
                <td class="text-center">
                    <div class="row">
                        <div class="col-sm-3">
                            <label class="checkbox-inline" for="example-inline-checkbox1">
                                <input type="checkbox" id="example-inline-checkbox1" name="example-inline-checkbox1" value="option1"> Deposit
                            </label>
                        </div>
                        <div class="col-sm-3">
                            <label class="checkbox-inline" for="example-inline-checkbox2">
                                <input type="checkbox" id="example-inline-checkbox2" name="example-inline-checkbox2" value="option2"> Guide
                            </label>
                        </div>
                        <div class="col-sm-3">
                            <label class="checkbox-inline" for="example-inline-checkbox3">
                                <input type="checkbox" id="example-inline-checkbox3" name="example-inline-checkbox3" value="option3"> H&S
                            </label>
                        </div>
                        <div class="col-sm-3">
                            <label class="checkbox-inline" for="example-inline-checkbox4">
                                <input type="checkbox" id="example-inline-checkbox4" name="example-inline-checkbox4" value="option4"> Risk
                            </label>
                        </div>                        
                    </div>
                </td>
                <td class="text-center">
                    <div class="btn-group">
                    <%= link_to admin_booking_path(item), :class => 'btn btn-xs btn-default', :'data-toggle' => "tooltip", :title => "View" do %>
                        <i class="fa fa-eye"></i>
                    <% end %>
                        <%= link_to edit_admin_booking_path(item), :class => 'btn btn-xs btn-default', :'data-toggle' => "tooltip", :title => "Edit" do %>
                            <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to admin_print_booking_path(item) + '.pdf', :class => 'btn btn-xs btn-default', :'data-toggle' => "tooltip", :title => "Print" do %>
                            <i class="fa fa-print"></i>
                        <% end %>
                        <%= link_to admin_booking_path(item), method: :delete, data: { confirm: "Are you sure you want to delete this booking?" }, :class => 'btn btn-xs btn-default', :'data-toggle' => "tooltip", :title => "Delete", :remote => true do %>
                            <i class="fa fa-times"></i>
                        <% end %>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<!--END datatable-->