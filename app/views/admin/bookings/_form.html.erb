<!--form for new booking-->
<%= simple_form_for [:admin, @booking], :html => { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' }, label_html: { class: 'control-label '} } do |f| %>
<div class="block">
	<div class="block-title">
		<h2>User-editable Booking settings</h2>
	</div>
	
	<div class="form-group">
		<div class="col-md-4"><%= f.input :company_name %></div>
		<div class="col-md-4"><%= f.input :contact_name %></div>
		<div class="col-md-4"><%= f.input :exhibiting_name %></div>
	</div>
	<div class="form-group">
		<div class="col-md-4"><%= f.input :telephone %></div>
		<div class="col-md-4">
			<label class="tel optional control-label" for="booking_telephone">Contact e-mail</label>
			<div class="input-group">
				<span class="input-group-addon">
					<i class="fa fa-envelope"></i>
				</span>
				<%= f.input_field :email %>
			</div>
		</div>	
		<div class="col-md-4"><%= f.input :website %></div>
	</div>
	<div class="form-group">
		<div class="col-md-6"><%= f.input :corporate_membership, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
		<div class="col-md-6"><%= f.input :tc_agreed, input_html: { class: '' },label_html: { class: 'checkbox-inline'} %></div>
	</div>
	<div class="form-group">
		<div class="col-md-12"><%= f.input :correspondence_address, as: :text %></div>
	</div>
	<div class="form-group">
		<div class="col-md-12"><%= f.input :invoice_address, as: :text %></div>
	</div>
	<div class="form-group">
		<div class="col-md-4"><%= f.input :finance_contact %></div>
		<div class="col-md-4"><%= f.input :finance_telephone %></div>
		<div class="col-md-4"><%= f.input :po_number %></div>
	</div>
	<div class="form-group">
		<div class="col-md-4"><%= f.input :show_area %></div>
		<div class="col-md-4"><%= f.input :zone %></div>
		<div class="col-md-4"><%= f.input :stand_number %></div>
	</div>
	<div class="form-group">
		<div class="col-md-4"><%= f.input :breed_society %></div>
		<div class="col-md-4"><%= f.input :stand_type %></div>
		<div class="col-md-4"><%= f.input :position %></div>
	</div>
	<div class="form-group">
		<div class="col-md-6"><%= f.input :frontage %></div>
		<div class="col-md-6"><%= f.input :depth %></div>
	</div>
	<div class="form-group">
		
		<div class="col-md-6"><%= f.input :contractor_company_name %></div>
		<div class="col-md-6"><%= f.input :contractor_contact_name %></div>
	</div>
	<div class="form-group">
		<div class="col-md-12"><%= f.input :contractor_address %></div>
	</div>
	<div class="form-group">
		<div class="col-md-6"><%= f.input :contractor_email %></div>
		<div class="col-md-6"><%= f.input :contractor_telephone %></div>
	</div>
	<div class="form-group">
		<div class="col-md-4"><%= f.input :requires_leaflets, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
		<div class="col-md-4"><%= f.input :number_leaflets %></div>
		<div class="col-md-4"><%= f.input :pdf_leaflet, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
	</div>
	<div class="form-group">
		<div class="col-md-4"><%= f.input :mobile_unit, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
		<div class="col-md-4"><%= f.input :livestock_stand, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
		<div class="col-md-4"><%= f.input :new_products, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
	</div>
	<div class="form-group">
		<div class="col-md-4"><%= f.input :philip_award, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
		<div class="col-md-4"><%= f.input :livestock_award, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
		<div class="col-md-4"><%= f.input :exports, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
	</div>
	<div class="form-group">
		<div class="col-md-4"><%= f.input :placements, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
		<div class="col-md-4"><%= f.input :exhibitor_list, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
		<div class="col-md-4"><%= f.input :livestock_award, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %></div>
	</div>
	<div class="form-group">
		<div class="col-md-12"><%= f.input :requirements %></div>
	</div>
</div>
<div class="block">
	<div class="block-title">
		<h2>Admin-only Booking settings</h2>
	</div>
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :the_deposit %>
		</div>
		<div class="col-md-6">
			<%= f.input :the_total %>
		</div>
		
		
	</div>
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :deposit_paid, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %>
		</div>
		
		<div class="col-md-6">
			<%= f.input :total_paid, input_html: { class: '' }, label_html: { class: 'checkbox-inline'} %>
		</div>
		
	</div>
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :created_at, as: :datetime %>
		</div>
		<div class="col-md-6">
		
		
			<%= f.input :updated_at, as: :datetime %>
		</div>
		
	</div>
	<div class="form-group">
		<div class="col-md-12">
			<%= f.input :notes %>
		</div>
		
	</div>
	
</div>
<div class="block full">
	<%= f.button :submit, class: "btn btn-success" %>
	
</div>
<% end %>
<!--END form for new booking-->