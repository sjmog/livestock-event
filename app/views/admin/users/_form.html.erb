<!--form for new user-->
	<%= simple_form_for [:admin, @user], :html => { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' }, label_html: { class: 'control-label '} } do |f| %>
<div class="block">
	<div class="block-title">
		<h2>Simple</h2>
	</div>

	<div class="form-group">
		<div class="col-md-6"><%= f.input :name %></div>
		<div class="col-md-6"><%= f.input :email, label: 'Email Address' %></div>
	</div>

	<div class="form-group">
		<div class="col-md-6"><%= f.input :password %></div>
		<div class="col-md-6"><%= f.input :role %></div>
	</div>

</div>
<div class="block">
	<div class="block-title">
		<h2>Advanced</h2>
	</div>

	
</div>
<div class="block full">
	<%= f.button :submit %>
	<% end %>
</div>

<!--END form for new user-->