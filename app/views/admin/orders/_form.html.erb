<!--form for new order-->
<%= simple_form_for [:admin, @order], :html => { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' }, label_html: { class: 'control-label '} } do |f| %>
<div class="block">
	<div class="block-title">
		<h2>User-editable Payment settings</h2>
	</div>
	
	<div class="form-group">
		<div class="row gutter30">
			<div class="col-md-6">
				<div class="block full">
					<div class="block-title">
						<h2>Billing Details</h2>
					</div>
					<div class="col-md-6">
						<%= f.input :billing_firstnames %>
					</div>
					<div class="col-md-6">
						<%= f.input :billing_surname %>
					</div>
					<div class="col-md-12"><%= f.input :billing_address %></div>
					<div class="col-md-12"><%= f.input :billing_city %></div>
					<div class="col-md-12"><%= f.input :billing_postcode %></div>
					<div class="col-md-12"><%= f.input :billing_country, :as => :string %></div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="block full">
					<div class="block-title">
						<h2>Invoice Details</h2>
					</div>
					<div class="col-md-6">
						<%= f.input :delivery_firstnames %>
					</div>
					<div class="col-md-6">
						<%= f.input :delivery_surname %>
					</div>
					<div class="col-md-12"><%= f.input :delivery_address %></div>
					<div class="col-md-12"><%= f.input :delivery_city %></div>
					<div class="col-md-12"><%= f.input :delivery_postcode %></div>
					<div class="col-md-12"><%= f.input :delivery_country, :as => :string %></div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="block full">
	<div class="block-title">
		<h2>Admin-only Payment settings</h2>
	</div>
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :amount, :as => :string %>
		</div>
		<div class="col-md-6">
			<%= f.input :status, :as => :string %>
		</div>
		
		
	</div>
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :user_id %>
		</div>
		<div class="col-md-6">
			<%= f.input :booking_id %>
		</div>
		
		
	</div>
	
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :created_at, as: :datetime %>
		</div>
		<div class="col-md-6">
		
		
			<%= f.input :updated_at, as: :datetime %>
		</div>
		
	</div>
	
</div>
<div class="block full">
	<%= f.button :submit %>
	<% end %>
</div>

<!--END form for new order-->