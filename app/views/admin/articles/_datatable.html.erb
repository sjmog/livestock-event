<!--BEGIN datatable-->
<div class="table-responsive">
    <table id="example-datatable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">Title</th>
                <th>Image</th>
                <th>Published</th>
                <th>Author</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% model.each do |item| %>
            <tr>
                <td><%= link_to admin_article_path(item), :'data-toggle' => "tooltip", :title => "View Article" do %>
                <%= item.title %>
                <% end %>
                </td>
                <td class="text-center">
                <%= image_tag(item.image, :size => "80x80", :alt => ("Article image for " + item.title)) %>
                </td>
                <td><%= item.published %></td>
                <td><%= item.author %></td>
                <td class="text-center">
                    <div class="btn-group">
                        <%= link_to admin_article_path(item), :class => 'btn btn-xs btn-default', :'data-toggle' => "tooltip", :title => "View" do %>
                            <i class="fa fa-eye"></i>
                        <% end %>
                        <%= link_to edit_admin_article_path(item), :class => 'btn btn-xs btn-default', :'data-toggle' => "tooltip", :title => "Edit" do %>
                            <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to admin_article_path(item), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, :class => 'btn btn-xs btn-default', :'data-toggle' => "tooltip", :title => "Delete", :remote => true do %>
                            <i class="fa fa-times"></i>
                        <% end %>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<!--END datatable-->