<h1>All Users</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Status</th>
    <th><span class="icon-pound-icon"></span></th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure you want to delete this user?', method: :delete %></td>
  </tr>
<% end %>
</table>

