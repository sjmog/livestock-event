<!-- Notification -->
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <small><em><%= time_ago_in_words(activity.created_at) %> ago</em></small><br>
        <%= if activity.owner.nil?
        	'Someone'
        	else
        	 link_to(activity.owner.name, admin_user_path(activity.owner)) 
        	 end %> created 
        	 <% if activity.trackable %>
        	   <%= link_to ('<i>"' + activity.trackable.title.to_s + '"</i>').html_safe, admin_article_path(activity.trackable) %>
        	 <% else %>
        	   an Article, which has since been removed
        	 <% end %>
    </div>
<!-- END Notification -->
