<!-- Notification -->
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <small><em><%= time_ago_in_words(activity.created_at) %> ago</em></small><br>
<%= if activity.owner.nil?
	'Someone'
	else
	 link_to(activity.owner.name, admin_user_path(activity.owner)) 
	 end %> added 
	 <% if activity.trackable %>
	   <%= link_to 'a Contractor', admin_contractor_path(activity.trackable) %>
	 <% else %>
	   a Contractor, which has since been removed
	 <% end %>
	 </div>
	 <!-- END Notification -->