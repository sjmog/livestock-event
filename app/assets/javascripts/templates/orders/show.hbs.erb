<h1>payment details</h1>
<div class="paymentsRow">
  <div class="small-12 columns">
    <!--stripe form-->
    <form action="<%= ENV["BASE_URL"] %>/charges" method="POST" id="payment-form" class="grid-form">
      <span class="payment-errors"></span>
      <fieldset>
        <div data-row-span="2">
          <div data-field-span="1">
            <label>
              <span class="formLabel">Card Number</span>
              <input type="text" size="20" data-stripe="number"/>
            </label>
          </div>
          <div data-field-span="1">
            <label>
              <span class="formLabel">CVC <span class="afterthought">(last three digits on the reverse of your card)</span></span>
              <input type="text" size="4" data-stripe="cvc"/>
            </label>
          </div>
        </div>
        <div data-row-span="2">
          <div data-field-span="1">
           <label>
             <span class="formLabel">Expiration Month (MM)</span>
             <input type="text" size="2" data-stripe="exp-month"/>
           </label>
          </div>
          <div data-field-span="1">
            <label>
              <span class="formLabel">Expiration Year (YYYY)</span>
              <input type="text" size="4" data-stripe="exp-year"/>
            </label>
          </div>
        </div>
      </fieldset>
      {{input type="hidden" name="order_id" valueBinding="id"}}
      <div class="vertWrap row">
        <div class="large-6 large-centered small-10 small-centered columns vertElement">
          <button class="button callToAction" type="submit"><span class="icon-tick rabdforange"></span></button>
          <span class="buttonLabel depositLabel">make deposit</span>
        </div>
      </div>
    </form>
  </div>
</div>

