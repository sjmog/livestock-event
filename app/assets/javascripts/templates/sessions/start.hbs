<div class="flipper">
  <div class="front">
  <span class="tile-title">please log in</span>
  <div class="row">
    <div class="small-12 columns">
      <form {{action "loginUser" on="submit"}}>
        <div>
          {{view Ember.TextField valueBinding='email' placeholder="Email Address"}}
          <small class="below">{{errors.email}}</small>
        </div>

        <div>
          {{view Ember.TextField type="password" valueBinding='password' placeholder="Password"}}
          <small class="below">{{errors.password}}</small>
        </div>

        <br>
        <button class="button callToAction" type="submit">Submit</button>
      </form>
  </div>
</div>
</div>
<div class="back">
  
</div>
</div>