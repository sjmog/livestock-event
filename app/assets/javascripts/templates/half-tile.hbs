<div class="flipper">
	<div {{bind-attr class=":front view.flipped:flipped"}}>
	{{#if tileTitle}}
		<span class="tile-title">
			{{#if backButton}}
				{{#link-to 'index' class="backbutton"}}<span class="icon-back"></span>{{/link-to}}
			{{/if}}
			{{title}}
			{{#if flipTile}}
				<span class="flipLink">
					<span {{action toggleFlip target="view"}} class="icon-forward"></span>
				</span>
			{{/if}}
		</span>
	{{/if}}
	{{#if contentTile}}
		{{{content}}}
	{{/if}}
	{{#if buttonTile}}
		<div class="row buttonContent">
			<div class="small-6 columns vertWrap">
				<div class="vertElement">
					{{#link-to 'index' class="button callToAction"}}
					<span {{bind-attr class="button1Icon"}}></span>
					{{/link-to}}
					<span class="buttonLabel">{{button1Text}}</span>
				</div>
			</div>
			<div class="small-6 columns vertWrap">
				<div class="vertElement">
					{{#link-to 'index' class="button callToAction"}}
					<span {{bind-attr class="button2Icon"}}></span>
					{{/link-to}}
					<span class="buttonLabel">{{button2Text}}</span>
				</div>
			</div>
		</div>
	{{/if}}
	</div>
	<div {{bind-attr class=":back view.flipped:flipped"}}>
		{{#if backTileTitle}}
			<span class="tile-title">
				{{backTitle}}
				{{#if flipTile}}
					<span class="flipLink">
						<span {{action toggleFlip target="view"}} class="icon-back"></span>
					</span>
				{{/if}}
			</span>
		{{/if}}
		{{#if contentTile}}
			<div class="row">
				<div class="small-12 columns">
					{{{content}}}
				</div>
			</div>
		{{/if}}
		{{#if buttonTile}}
			<div class="row buttonContent">
				<div class="small-6 columns vertWrap">
					<div class="vertElement">
						{{#link-to 'index' class="button callToAction"}}
						<span {{bind-attr class="button3Icon"}}></span>
						{{/link-to}}
						<span class="buttonLabel">{{button3Text}}</span>
					</div>
				</div>
				<div class="small-6 columns vertWrap">
					<div class="vertElement">
						{{#link-to 'index' class="button callToAction"}}
						<span {{bind-attr class="button4Icon"}}></span>
						{{/link-to}}
						<span class="buttonLabel">{{button4Text}}</span>
					</div>
				</div>
			</div>
		{{/if}}
	</div>
</div>