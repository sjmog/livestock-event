<div class="flipper">
  <div class="front">
  <span class="tile-title">{{#link-to 'index' class="backbutton"}}<span class="icon-back"></span>{{/link-to}}all bookings</span>
  <div class="row">
    <div class="small-12 columns">

    <table class="bookingsTable" id="bookingsTable">
  <thead>
    <th>Go to Booking</th>
    <th>Booking ID</th>
    <th>Company Name</th>
    <th>PO No.</th>
    <th>RABDF Membership?</th>
    <th>Tel.</th>
    <th>Order</th>
    <th>T&Cs</th>
    <th>Show Area</th>
    <th>Zone</th>
    <th>Block Number</th>
    <th>Stand Type</th>
    <th>Frontage</th>
    <th>Depth</th>
    <th><span class="icon-pound-icon"></span></th>
    <th>Deposit Paid?</th>
    <th>Total Paid?</th>
    <th>Breed Society</th>
  </thead>
  <tbody>
    {{#each controller}}
    <tr class="single-booking">
      <td>{{#link-to "bookings.show" this }}<span class="icon-forward"></span>{{/link-to}}</td>
      <td>{{#link-to "bookings.show" this }}{{id}}{{/link-to}}</td>
      <td>{{#linkTo "bookings.show" this }}{{ companyName }}{{/linkTo}}<br /><small>{{ contactName }}</small><br /><small><a {{bind-attr href="website"}}>{{website}}</a></small></td>
      <td>{{ poNumber }}</td>
      <td>{{#if corporateMembership }}<span class="icon-tick-alt"></span>{{else}}<span class="icon-close-alt-2"></span>{{/if}}</td>
      <td>{{ telephone }}</td>
      <td>{{ order }}</td>
      <td>{{#if tcAgreed }}<span class="icon-tick-alt"></span>{{else}}<span class="icon-close-alt-2"></span>{{/if}}</td>
      <td>{{ showArea }}</td>
      <td>{{ zone }}</td>
      <td>{{ standNumber }}</td>
      <td>{{ standType }}</td>
      <td>{{ frontage }}m</td>
      <td>{{ depth }}m</td>
      <td>Â£{{ total }}</td>
      <td>{{#if depositPaid }}<span class="icon-tick-alt"></span>{{else}}<span class="icon-close-alt-2"></span>{{/if}}</td>
      <td>{{#if totalPaid }}<span class="icon-tick-alt"></span>{{else}}<span class="icon-close-alt-2"></span>{{/if}}</td>
      <td>{{ breedSociety }}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

  </div>
</div>
</div>
