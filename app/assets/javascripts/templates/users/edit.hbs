<div class="flipper">
  <div class="front">
  <span class="tile-title">edit profile for {{name}}</span>
    <div class="row">
      <div class="small-12 columns">
        <form class="grid-form registration userEdit" {{action "updateUser" target="controller" on="submit"}}>
          <fieldset>
            <div data-row-span="2">
              <div data-field-span="1" {{bindAttr class=":controls errors.name:error"}}>
                <label>Full Name</label>
                {{input type="text" value=name placeholder="Full Name"}}
                <small class="below">{{errors.name}}</small>
              </div>

              <div data-field-span="1" {{bindAttr class=":controls errors.email:error"}}>
                <label>Email Address</label>
                {{input type="email" value=email placeholder="Email Address"}}
                <small class="below">{{errors.email}}</small>
              </div>
            </div>
            <div data-row-span="2">
              <div data-field-span="1" {{bindAttr class=":controls errors.password:error"}}>
                <label>Password</label>
                {{input type="password" value=password placeholder="Password"}}
                <small class="below">{{errors.password}}</small>
              </div>

              <div data-field-span="1" {{bindAttr class=":controls errors.password_confirmation:error"}}>
                <label>Confirm Password</label>
                {{input type="password" value=password_confirmation placeholder="Confirm Password"}}
                <small class="below">{{errors.password_confirmation}}</small>
              </div>
            </div>
          </fieldset>
          <div class="form-actions">
            <button type="submit" class="rabdfblue button callToAction">proceed</button>
            <button type="submit" class="rabdfblue button callToAction">cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="back">
    
  </div>
</div>