<div class="flipper">
	<div {{bind-attr class=":front view.flipped:flipped"}}>
		<span class="tile-title">international</span>
		<div class="row buttonContent">
			<div class="small-6 columns vertWrap">
				<div class="vertElement">
					{{#link-to 'accommodation' class="button callToAction" target="_blank"}}<span class="icon-moon pink"></span>{{/link-to}}
					<span class="buttonLabel">accommodation</span>
				</div>
			</div>
			<div class="small-6 columns vertWrap">
				<div class="vertElement">
					<a {{action toggleFlip target="view"}} class="button callToAction"><span class="icon-suitcase pink"></span></a>
					<span class="buttonLabel">tour providers</span>
				</div>
			</div>
		</div>
	</div>
	<div {{bind-attr class=":back view.flipped:flipped"}}>
		<span class="tile-title">tour providers<span class="flipLink"><span {{action toggleFlip target="view"}} class="icon-back rabdfblue"></span></span></span>
		<div class="row buttonContent">
			<div class="small-6 columns vertWrap">
				<div class="vertElement">
					<a href="http://www.fieldfarmtours.co.uk/uploads/tours/307_livestockevent.pdf" target="_blank" class="button callToAction"><span class="icon-location pink"></span></a>
					<span class="buttonLabel">field farm tours</span>
				</div>
			</div>
			<div class="small-6 columns vertWrap">
				<div class="vertElement">
					<a href="http://www.travel-solutions.co.uk/" target="_blank" id="afarAction" class="button callToAction"><span class="icon-travel-solutions-logo pink"></span></a>
					<span class="buttonLabel">travel solutions</span>
				</div>
			</div>
		</div>
	</div>
</div>
